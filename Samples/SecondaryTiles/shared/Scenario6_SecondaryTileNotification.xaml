<Page
    x:Class="SDKTemplate.Scenario6_SecondaryTileNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12,10,12,12">
        <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}">
            Secondary tiles can send tile and badge notifications just like app tiles.
        </TextBlock>
        <Button Content="Pin to Start" Margin="0,10,0,0" Click="PinLiveTile_Click"/>
        <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Margin="0,10,0,0">
            You can use the NotificationsExtensions library to create notifications.
        </TextBlock>
        <Button Content="Send Tile Notification" Margin="0,10,0,0" Click="SendTileNotification_Click"/>
        <Button Content="Send Badge Notification" Margin="0,10,0,0" Click="SendBadgeNotification_Click"/>
        <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}" Margin="0,10,0,0">
            You can also create notifications by generating XML manually.
        </TextBlock>
        <Button Content="Send Tile Notification" Margin="0,10,0,0" Click="SendTileNotificationWithStringManipulation_Click"/>
        <Button Content="Send Badge Notification" Margin="0,10,0,0" Click="SendBadgeNotificationWithStringManipulation_Click"/>
    </StackPanel>
</Page>