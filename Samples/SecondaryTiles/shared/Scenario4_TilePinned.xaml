<Page
    x:Class="SDKTemplate.Scenario4_TilePinned"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12,10,12,12">
        <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}">
            In this scenario we will check to see whether the secondary tile from
            Scenario 1 is pinned
        </TextBlock>
        <Button Content="Check whether tile exists" Margin="0,10,0,0" Click="TileExists_Click"/>
    </StackPanel>
</Page>