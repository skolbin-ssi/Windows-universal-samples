<Page
    x:Class="SDKTemplate.Scenario3_EnumerateTiles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12,10,12,12">
        <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}">
            In this scenario we will retrieve a list of all the secondary tiles for
            the package. This is especially useful when refreshing notification
            channel URIs for secondary tiles, or for opening channels during the
            first run on a new PC.
        </TextBlock>
        <Button Content="Enumerate tiles" Margin="0,10,0,0" Click="EnumerateSecondaryTiles_Click"/>
    </StackPanel>
</Page>