<Page
    x:Class="SDKTemplate.Scenario2_UnpinTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12,10,12,12">
        <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}">
            In this scenario, we will unpin the tile that was pinned in scenario 1.
            If this were an actual application, we would first want to check whether
            the tile that we're unpinning exists. Please refer to scenario 4 for an
            example of how to check whether a tile exists.
        </TextBlock>
        <Button Content="Unpin from Start" Margin="0,0,10,0" Click="UnpinSecondaryTile_Click"/>
    </StackPanel>
</Page>