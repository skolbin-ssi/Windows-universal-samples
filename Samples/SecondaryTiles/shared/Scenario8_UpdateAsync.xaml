<Page
    x:Class="SDKTemplate.Scenario8_UpdateAsync"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12,10,12,12">
        <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}">
            This scenario demonstrates updating the default logo of a pinned
            secondary tile.
        </TextBlock>
        <Button Content="Update logo" Margin="0,10,0,0" Click="UpdateDefaultLogo_Click"/>
    </StackPanel>
</Page>