<Page
    x:Class="SDKTemplate.Scenario1_PinTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12,10,12,12">
        <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}">
            Secondary tiles are pinned to the Start screen after user confirmation.
        </TextBlock>
        <Button Content="Pin to Start" Margin="0,0,10,0" Click="PinButton_Click"/>
    </StackPanel>
</Page>